{
  "name": "loki-shopping-app",
  "version": "1.0.0",
  "description": "A local shopping application for Indian manufacturers and sellers",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd shopping-app/frontend && npm start",
    "start:backend": "cd shopping-app/backend && npm run build && npm start",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd shopping-app/frontend && npm start",
    "dev:backend": "cd shopping-app/backend && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}